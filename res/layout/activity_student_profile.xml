<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nodoubts.ui.profile.StudentProfileActivity" >

    <ImageView
        android:id="@+id/img_view_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/subject_name_textview"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/subject_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_view_teacher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="NAME" />

    <TextView
        android:id="@+id/courses_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_view_teacher"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:ems="10"
        android:text="@string/starred_teachers" />


    <TextView
        android:id="@+id/email_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/courses_text_field"
        android:layout_alignRight="@+id/subject_name_textview"
        android:layout_marginBottom="62dp"
        android:text="EMAIL" />

</RelativeLayout>
