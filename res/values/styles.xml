<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <color name="white">#FFFFFF</color>
    <color name="white_2">#F4F1EF</color>
    <color name="light_grey">#6D6E70</color>
    <color name="light_orange">#F9A51E</color>
    <color name="dark_grey">#414042</color>
    <color name="dark_orange">#F7941E</color>
    <color name="bright_blue">#00AEEF</color>

    <!-- Application theme. -->
    <style name="CustomTheme" parent="android:style/Theme.Holo">
        <item name="android:buttonStyle">@style/custom_orange_btn</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:colorBackground">@color/dark_grey</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
        <item name="android:subtitleTextStyle">@style/NoTitleText</item>
        <item name="android:displayOptions">homeAsUp</item>
        <item name="android:icon">@android:color/transparent</item>
        <!-- <item name="android:editTextStyle">@style/rouded_text_view</item> -->
        <!-- TODO: Put margin in rounded_text_view style, consider this margin in main activity -->
    </style>

    <!-- No Action Bar Theme -->
    <style name="CustomThemeNAB" parent="@style/CustomTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:colorBackground">@color/dark_grey</item>
        <item name="android:buttonStyle">@style/custom_orange_btn</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:buttonStyle">@style/custom_orange_btn</item>
        <item name="android:background">@color/dark_grey</item>
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="android:colorBackground">@color/dark_grey</item>
    </style>

    <style name="customSmallRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_small_rating_bar</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:minWidth">15dp</item>
    </style>

    <style name="custom_orange_btn" parent="@android:style/Widget.Button">
        <item name="android:button">@drawable/custom_orange_btn</item>
        <item name="android:textColor">@color/dark_orange</item>
        <item name="android:textColorHint">@color/dark_orange</item>
        <item name="android:background">@drawable/custom_orange_btn</item>
    </style>

    <style name="enter_orange_btn" parent="@android:style/Widget.Button">
        <item name="android:button">@drawable/orange_btn</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:background">@drawable/orange_btn</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="schedule_btn" parent="@android:style/Widget.ImageButton">
        <item name="android:button">@drawable/schedule_btn</item>
        <item name="android:background">@drawable/schedule_btn</item>
    </style>

    <style name="search_btn" parent="@android:style/Widget.ImageButton">
        <item name="android:button">@drawable/search_btn_img</item>
        <item name="android:background">@drawable/search_btn_img</item>
    </style>

    <style name="subject_btn" parent="@android:style/Widget.ImageButton">
        <item name="android:button">@drawable/ic_subject</item>
        <item name="android:background">@drawable/ic_subject</item>
    </style>

    <style name="rouded_text_view" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/rounded_text_view</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">6pt</item>
    </style>

    <style name="fb_btn">
        <item name="android:button">@drawable/fb_btn</item>
        <item name="android:background">@drawable/fb_btn</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

</resources>