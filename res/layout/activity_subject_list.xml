<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nodoubts.SubjectListActivity" >

    <Button
        android:id="@+id/button_createSubject"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Search" />

    <EditText
        android:id="@+id/editText_subjectSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_createSubject"
        android:layout_alignRight="@+id/listView_subjectList"
        android:layout_toRightOf="@+id/button_createSubject"
        android:ems="10"
        android:inputType="text"
        android:maxWidth="0dp"
        android:width="150dp" >

        <requestFocus />
        
    </EditText>

    <ListView
        android:id="@+id/listView_subjectList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_create_new_subject"
        android:layout_alignLeft="@+id/button_createSubject"
        android:layout_below="@+id/button_createSubject" >

    </ListView>

    <Button
        android:id="@+id/btn_create_new_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listView_subjectList"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listView_subjectList"
        android:text="@string/add_subject" />

</RelativeLayout>