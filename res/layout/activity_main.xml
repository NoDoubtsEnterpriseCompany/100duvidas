<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nodoubts.MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.13" >

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="224dp"
            android:layout_height="50dp"
            android:layout_above="@+id/registerbtn"
            android:layout_alignLeft="@+id/registerbtn"
            android:layout_alignRight="@+id/registerbtn"
            android:layout_marginBottom="17dp"
            android:text="@string/login_message"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_above="@+id/loginbtn"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="21dp"
            android:ems="10"
            android:hint="@string/password_hint"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/registerbtn"
            android:layout_width="208dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/register_message"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/welcome_mesage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/welcome_mesage"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:paddingTop="50dp" />

    </RelativeLayout>

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp" />

</LinearLayout>