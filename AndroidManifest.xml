<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nodoubts"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <application android:name="com.nodoubts.NoDoubts"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterUserActivity"
            android:label="@string/title_activity_register_user" >
        </activity>
        <activity
            android:name=".ProfessorProfileActivity"
            android:label="@string/title_activity_teacher_profile" >
        </activity>
        <activity
            android:name=".StudentProfileActivity"
            android:label="@string/title_activity_student_profile" >
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile" >
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".RegisterSubjectActivity"
            android:label="@string/title_activity_register_subject" >
        </activity>
        <activity
            android:name=".SearchProfessorActivity"
            android:label="@string/title_activity_search_professor" >
        </activity>
        <activity android:name=".SubjectListActivity"></activity>
        <activity android:name=".SearchActivity"></activity>
        <activity android:name=".SubjectActivity"></activity>
        <activity android:name=".ViewProfessorActivity"></activity>
    </application>

</manifest>
